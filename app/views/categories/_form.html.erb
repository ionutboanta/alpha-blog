

    <%= render "shared/errors", obj: @category %>


    <%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :title %>
      </div>
      <div class="col-sm-6">
        <%= f.text_field :name, class: "form-control", placeholder: "Category name" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-10 col-sm-offset-2">
        <%= f.submit class:"btn btn-primary btn-lg" %>
      </div>
    </div>
  <% end %>
  <div class="row col-xs-4 col-xs-offset-2">
    <%= link_to "Cancel request", articles_path %>
  </div>